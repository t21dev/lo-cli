# LoCLI Environment Variables
# Copy this file to .env and fill in your values

# ===================
# Optional API Keys
# ===================

# OpenAI API Key (for AI-optimized suggestions)
# Get yours at: https://platform.openai.com/api-keys
# Note: LoCLI works without this, but won't provide AI suggestions
OPENAI_API_KEY=sk-xxxxxxxxxxxxxxxxxxxxxxxx

# OpenAI Model (default: gpt-4.1-mini)
# Options: gpt-4.1-mini, gpt-4o, gpt-4o-mini, etc.
OPENAI_MODEL=gpt-4.1-mini

# HuggingFace Token (required for gated models like Llama)
# Get yours at: https://huggingface.co/settings/tokens
HF_TOKEN=hf_xxxxxxxxxxxxxxxxxxxxxxxx

# ===================
# Hardware Settings
# ===================

# CUDA device (default: cuda:0)
# Use comma-separated for multi-GPU: 0,1
CUDA_VISIBLE_DEVICES=0

# ===================
# Optional Settings
# ===================

# Default training method
# Options: lora, qlora
DEFAULT_METHOD=qlora

# Log level (default: INFO)
# Options: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# HuggingFace cache directory
# Default: ~/.cache/huggingface
HF_HOME=~/.cache/huggingface
